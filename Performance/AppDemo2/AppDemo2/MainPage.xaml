    <ListView CachingStrategy="RecycleElement"
              ItemsSource="{Binding Movies}"
              RowHeight="220"
              Header="List of Movies"
              Footer="Footer">
        <ListView.HeaderTemplate>
            <DataTemplate>
                <Label Text="{Binding .}"
                   TextColor="Teal"
                   FontSize="22"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"/>
            </DataTemplate>
        </ListView.HeaderTemplate>
        <ListView.FooterTemplate>
            <DataTemplate>
                <Label Text="{Binding .}"
                       TextColor="Teal"
                       FontSize="22"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </DataTemplate>
        </ListView.FooterTemplate>
        <ListView.ItemTemplate>
            <DataTemplate>
